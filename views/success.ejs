<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/app.css">
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-0 rounded-3">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div>
                                <h4 class="mb-1">QR Generated</h4>
                                <div class="text-muted small">S No: <strong><%= record.s_no %></strong> Â· LP No: <strong><%= record.lp_no %></strong></div>
                            </div>
                            <a class="btn btn-outline-secondary btn-sm" href="/admin/login">Admin</a>
                        </div>
                        <div class="row g-4 align-items-center">
                            <div class="col-md-5 text-center">
                                <img id="qrImg" src="<%= qrDataUrl %>" alt="QR Code" class="img-fluid border rounded p-2 bg-white" style="max-width: 256px;" />
                                <div class="mt-3 d-flex gap-2 justify-content-center">
                                    <button class="btn btn-success" onclick="downloadQR()">Download QR</button>
                                    <button class="btn btn-outline-primary" onclick="printQR()">Print QR</button>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="mb-3">
                                    <div class="text-muted small mb-1">Scanned JSON</div>
                                    <div class="bg-light rounded p-2"><code class="user-select-all"><%= typeof jsonText !== 'undefined' ? jsonText : JSON.stringify(record) %></code></div>
                                    <div class="text-muted small mt-2">Optional API URL</div>
                                    <div class="bg-light rounded p-2"><code class="user-select-all"><%= jsonUrl %></code></div>
                                </div>
                                <div class="mb-2"><strong>Items</strong></div>
                                <div class="mb-3"><%= record.items %></div>
                                <div class="mb-2"><strong>Issue Voucher</strong></div>
                                <div class="mb-3"><%= record.issue_voucher_number %></div>
                                <div class="d-flex gap-2">
                                    <a href="/form" class="btn btn-primary">Generate Another</a>
                                    <a href="/admin" class="btn btn-outline-secondary">View All</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script>
        function downloadQR(){
            const a = document.createElement('a');
            a.href = document.getElementById('qrImg').src;
            a.download = 'qr-<%= record.s_no %>.png';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }
        function printQR(){
            const w = window.open('');
            w.document.write('<img src="'+document.getElementById('qrImg').src+'" style="width:256px;height:256px;" />');
            w.document.close();
            w.focus();
            w.print();
            w.close();
        }
    </script>
</body>
</html>


